<?xml version="1.0" encoding="utf-8"?>
<Project>

  <PropertyGroup>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <ContinuousIntegrationBuild Condition="'$(GITHUB_RUN_ID)' != ''">true</ContinuousIntegrationBuild>
    <ImplicitUsings>enable</ImplicitUsings>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <TargetFramework>netstandard2.0</TargetFramework>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>

  <PropertyGroup>
    <Authors>Stephen (Sven) Vernyi</Authors>
    <Copyright>Stephen (Sven) Vernyi</Copyright>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
    <IncludeSymbols>true</IncludeSymbols>
    <PackageIcon>QPdfSharp_128.png</PackageIcon>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/svengeance/QPdfSharp</PackageProjectUrl>
    <PackageTags>pdf qpdf qpdf.net qpdfsharp</PackageTags>
    <RepositoryUrl>https://github.com/svengeance/QPdfSharp</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\assets\QPdfSharp_128.png">
      <Pack>True</Pack>
      <PackagePath>./</PackagePath>
      <Link>QPdfSharp_128.png</Link>
    </None>
  </ItemGroup>

</Project>
